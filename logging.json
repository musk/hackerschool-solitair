{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "standard": {
            "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
        }
    },
    "handlers": {
        "file": {
            "level": "DEBUG",
            "formatter": "standard",
            "class": "logging.FileHandler",
            "mode": "a",
            "filename": "solitair.log",
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "": {
            "handlers": ["file"],
            "level": "WARNING",
            "propagate": false
        },
        "solitair": {
            "handlers": ["file"],
            "level": "INFO",
            "propagate": false
        }
    }
}
